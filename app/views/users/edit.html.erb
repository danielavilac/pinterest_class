<%= form_for @user do |f| %>
  <%= f.label 'Username' %>
  <%= f.text_field :username %>
  <%= f.label 'First name' %>
  <%= f.text_field :first_name %>
  <%= f.label 'Lastname' %>
  <%= f.text_field :lastname %>
  <%= f.label 'E-mail' %>
  <%= f.text_field :email %>
  <%= f.label 'Password' %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>
